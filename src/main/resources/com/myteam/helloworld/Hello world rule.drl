package com.myteam.helloworld;
dialect "mvel"

rule "full string"
when 
    $hw: HelloWorldObject() @watch(firstStr,secondStr)
then
    modify($hw){ 
        fullStr=$hw.firstStr+" "+$hw.secondStr;
    };
end;



rule "second world"
when 
    $hw: HelloWorldObject(firstStr=="Hello") 
then
    modify($hw){ 
        secondStr="World";
    };
end;




