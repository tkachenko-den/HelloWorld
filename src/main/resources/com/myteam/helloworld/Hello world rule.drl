package com.myteam.helloworld;
dialect "mvel"

rule "second world"
no-loop
when 
    $hw: HelloWorldObject(firstStr=="Hello")
then
    modify($hw){ 
        secondStr="World"
    };
end;

rule "full string"
no-loop
when 
    $hw: HelloWorldObject()
then
    String fs =  $hw.firstStr+$hw.secondStr;
    modify($hw){ 
        fullStr=fs;
    };
end;


